{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tesis.local/schemas/b_to_a_recommendation.schema.json",
  "title": "B->A Recommendation",
  "type": "object",
  "required": [
    "event_type",
    "event_version",
    "student",
    "context",
    "recommendation",
    "state",
    "explain"
  ],
  "properties": {
    "event_type": {
      "const": "recommendation"
    },
    "event_version": {
      "type": "string"
    },
    "student": {
      "type": "object",
      "required": [
        "student_id",
        "session_id"
      ],
      "properties": {
        "student_id": {
          "type": "string"
        },
        "session_id": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "context": {
      "type": "object",
      "required": [
        "topic_id",
        "skill_ids",
        "mode"
      ],
      "properties": {
        "topic_id": {
          "type": "string"
        },
        "skill_ids": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "language": {
          "type": "string"
        },
        "mode": {
          "enum": [
            "diagnostic",
            "practice",
            "exam"
          ]
        }
      },
      "additionalProperties": true
    },
    "recommendation": {
      "type": "object",
      "required": [
        "action",
        "item_id",
        "target_difficulty",
        "support_type"
      ],
      "properties": {
        "action": {
          "enum": [
            "present_item",
            "present_explanation",
            "present_practice_set"
          ]
        },
        "item_id": {
          "type": "string"
        },
        "target_difficulty": {
          "enum": [
            "facil",
            "media",
            "dificil"
          ]
        },
        "support_type": {
          "enum": [
            "no_hint",
            "hint",
            "worked_example"
          ]
        }
      },
      "additionalProperties": true
    },
    "state": {
      "type": "object",
      "required": [
        "theta_hat",
        "se_theta",
        "mastery"
      ],
      "properties": {
        "theta_hat": {
          "type": "number"
        },
        "se_theta": {
          "type": "number",
          "minimum": 0
        },
        "mastery": {
          "type": "object",
          "additionalProperties": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      },
      "additionalProperties": true
    },
    "explain": {
      "type": "object",
      "required": [
        "policy_used",
        "reason",
        "timestamp"
      ],
      "properties": {
        "policy_used": {
          "type": "string"
        },
        "reason": {
          "type": "string"
        },
        "timestamp": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
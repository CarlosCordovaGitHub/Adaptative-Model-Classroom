{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tesis.local/schemas/a_to_b_activity_result.schema.json",
  "title": "A->B Activity Result",
  "type": "object",
  "required": [
    "event_type",
    "event_version",
    "student",
    "context",
    "activity",
    "response"
  ],
  "properties": {
    "event_type": {
      "const": "activity_result"
    },
    "event_version": {
      "type": "string"
    },
    "student": {
      "type": "object",
      "required": [
        "student_id",
        "session_id"
      ],
      "properties": {
        "student_id": {
          "type": "string"
        },
        "session_id": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "context": {
      "type": "object",
      "required": [
        "topic_id",
        "skill_ids",
        "mode"
      ],
      "properties": {
        "topic_id": {
          "type": "string"
        },
        "skill_ids": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "language": {
          "type": "string"
        },
        "mode": {
          "enum": [
            "diagnostic",
            "practice",
            "exam"
          ]
        }
      },
      "additionalProperties": true
    },
    "activity": {
      "type": "object",
      "required": [
        "item_id",
        "item_format",
        "difficulty_label"
      ],
      "properties": {
        "activity_id": {
          "type": "string"
        },
        "item_id": {
          "type": "string"
        },
        "item_format": {
          "enum": [
            "mcq",
            "true_false",
            "open"
          ]
        },
        "difficulty_label": {
          "enum": [
            "facil",
            "media",
            "dificil"
          ]
        },
        "seed": {
          "type": "integer"
        }
      },
      "additionalProperties": true
    },
    "response": {
      "type": "object",
      "required": [
        "is_correct",
        "response_time_ms",
        "hint_used"
      ],
      "properties": {
        "is_correct": {
          "type": "boolean"
        },
        "response_time_ms": {
          "type": "integer",
          "minimum": 0
        },
        "hint_used": {
          "type": "boolean"
        },
        "attempts_count": {
          "type": "integer",
          "minimum": 1
        },
        "selected_option": {
          "type": "string"
        },
        "hints_count": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": true
    },
    "telemetry": {
      "type": "object"
    }
  },
  "additionalProperties": true
}